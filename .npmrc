
# Skip all optional dependencies to avoid electron and native module issues
ignore-optional=true
omit=optional

# Skip all platform-specific build dependencies and force use of pre-built binaries
build-from-source=false
prefer-offline=true
prefer-dedupe=true

# Skip git dependencies completely
no-git=true
git-tag-version=false

# Force use of npm registry for all packages
registry=https://registry.npmjs.org/
@electron:registry=https://registry.npmjs.org/
@rollup:registry=https://registry.npmjs.org/

# Increase reliability of network operations
fetch-retries=10
fetch-retry-factor=2
fetch-retry-mintimeout=30000
fetch-retry-maxtimeout=120000

# Use legacy peer deps resolution to avoid conflicts
legacy-peer-deps=true

# Bypass platform-specific optional dependencies
optional=false
only=prod,dev

# Force exact versions to prevent unexpected updates
save-exact=true

# Disable scripts execution for security and consistency
ignore-scripts=true
