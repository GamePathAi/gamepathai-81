
# Temporary workaround for @electron/node-gyp issues
# Ignore optional dependencies that might cause installation problems
ignore-optional=true
# Explicitly ignore the problematic package
omit=optional dev
# Don't try to build native modules for now
build-from-source=false
# More reliable network settings
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
# Ignore specific packages
noproxy=localhost,127.0.0.1
# Bypass git for electron-related packages
@electron:registry=https://registry.npmjs.org/
