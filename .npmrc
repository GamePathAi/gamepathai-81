
# Completely ignore all optional dependencies to avoid electron-related issues
ignore-optional=true
omit=optional
build-from-source=false
# Skip all git dependencies to prevent git clone errors
no-git=true
# Reliable network settings
fetch-retries=5
fetch-retry-factor=2
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
# Bypass git for electron-related packages
@electron:registry=https://registry.npmjs.org/
legacy-peer-deps=true
